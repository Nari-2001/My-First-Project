@model IEnumerable<FoodApplication.Models.Cart>
<div class="container cartcontainer">
    <div class="row">
        <div class="col-12">
            <div class="border-bottom border-2">
                <h4>Recipe Cart</h4>
                <p class="text-muted fst-italic">@Model.Count() Recipes in cart</p>
            </div>
            <div class="mt-2">
                    @foreach (var item in Model)
                    {
                        <div class="border-bottom d-flex">
                            <img src="@item.Image_Url" class="cartimg rounded mt-1 mb-1">
                            <a href="/Recipe/Order?id=@item.RecipeId" class="text-decoration-none fw-bold text-dark cartTitle ms-3">@item.Title</a>
                        <span onclick="removeCartfromList('@item.RecipeId')" class="text-danger" id="removeitemstyle">
                                Remove
                            </span>
                        </div>
                    }
                @if (Model.Count() == 0)
                {
                    <div class="text-center">
                        <i class="fa-solid fa-cart-shopping text-muted" id="emptycart"></i>
                        <p class="fs-5 fw-bold text-muted">Your cat is empty</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>