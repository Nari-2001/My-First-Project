@model FoodApplication.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="container">
    <div class="row shadow rounded">
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div>
                <img src="~/Images/Thali.jpg" class="w-100"/>
            </div>
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <form autocomplete="off" method="post" class="p-3 mt-3">
                <div class="mb-3">
                    <h2 class="text-danger fst-italic fw-bold">Register</h2>
                    <span class="fst-italic text-muted">Create Your account</span>
                </div>
                <div>
                    @Html.ValidationSummary()
                </div>
                <div class="mb-3 form-floating">
                    @Html.TextBoxFor(r=>r.Name,new{@class="form-control",placeholder="Name"})
                    <label for="Name">Name</label>
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(r=>r.Address,new{@class="form-control",placeholder="Address"})
                    <label for="Address">Address</label>
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(r=>r.Email,new{@class="form-control",placeholder="Email",type="Email"})
                    <label for="Email">Email</label>
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(r=>r.Password,new{@class="form-control",placeholder="Password",type="Password"})
                    <label for="Password">Password</label>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-dark btn-sm w-100">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>