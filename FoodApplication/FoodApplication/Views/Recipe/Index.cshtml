@{
    ViewData["Title"] = "Recipes";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
                @Html.Partial("_SearchBar")
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-2">
            <div class="shadow rounded position-sticky" id="recipe-list">
                <div class="border-bottom p-2">
                    <h4 class="text-center text-danger">Recipes</h4>
                    @Html.Partial("_MenuBar")
                </div>
            </div>
        </div>
       <div class="col-10">
           <div class="mb-3">
               <h4 class="text-dark" id="pizzaItems">Pizza</h4>
               <div class="row" id="pizzarecipe"></div>
           </div>
           <div class="mb-3">
                <h4 class="text-dark" id="chickeItems">Chicken</h4>
               <div class="row" id="chickenrecipes">
               </div>
           </div>
            <div class="mb-3">
                <h4 class="text-dark" id="cakeItems">Cakes</h4>
                <div class="row" id="cakerecipes">
                </div>
            </div>
            <div class="mb-3">
                <h4 class="text-dark" id="saladItems">salad</h4>
                <div class="row" id="saladrecipes">
                </div>
            </div>
            <div class="mb-3">
                <h4 class="text-dark" id="friesItems">fries</h4>
                <div class="row" id="friesrecipes">
                </div>
            </div>
       </div>
    </div>
</div>

<script src="~/lib/jquery/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function(){
        GetRecipes("pizza", "pizzarecipe", false);
        GetRecipes("chicken", "chickenrecipes", false);
        GetRecipes("cake", "cakerecipes", false);
        GetRecipes("salad", "saladrecipes", false);
        GetRecipes("fries", "friesrecipes", false);
    }) 
</script>