@{
    ViewData["Title"]=@ViewBag.title;
}
<div class="row">
    <div class="col-12">
        @Html.Partial("_SearchBar")
    </div>
</div>
<div class="row mt-3">
    <div class="col-2">
        <div class="shadow rounded position-sticky" id="recipe-list">
            <div class="border-bottom p-2">
                <h4 class="text-center text-danger">Recipes</h4>
                @Html.Partial("_MenuBar")
            </div>
        </div>
    </div>
    <div class="col-10">
        <h2>Search Recipes@*(<span>@TempData["lengthOfItems"]</span>)*@</h2>
        <div class="row" id="searchRecipes">
            
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function(){
        GetRecipes('@ViewBag.title', "searchRecipes",true);
    })
</script>